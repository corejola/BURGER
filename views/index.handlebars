<h1>Burgers!</h1>

<h2>Input the burgers that you want to DEVOUR!</h2>
<h2> Your Burgers!</h2>

<div>
    <h3>To Be Eaten!</h3>
    <ul>

        {{#each dbBurger}}
        {{#unless devoured}}

        <li>
            {{name}}
            {{!-- {{> burgers/burger-block devoured=true}} --}}
            <button class="change-devourment" data-burger-id="{{id}}" data-newdevoured="{{devoured}}">
                {{#if devoured}}Devoured!{{else}}Regurgitate!{{/if}}
            </button>
            <button class="delete-burger" data-burger-id="{{id}}">DELETE!</button>
        </li>

        {{/unless}}
        {{/each}}

    </ul>
</div>

<div>
    <h3>Burgers Devoured!</h3>
    <ul>

        {{#each dbBurger}}
        {{#if devoured}}

        <li>
            {{name}}
            {{!-- {{> burgers/burger-block devoured=false}} --}}
            <button class="change-devourment" data-burger-id="{{id}}" data-newdevoured="{{devoured}}">
                {{#if devoured}}Devoured!{{else}}Regurgitate!{{/if}}
            </button>

            <button class="delete-burger" data-burger-id="{{id}}">DELETE!</button>
        </li>

        {{/if}}
        {{/each}}

    </ul>

</div>

<h2>Add a Burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="name">
    </div>

    <button type="submit">Add Burger</button>
</form>